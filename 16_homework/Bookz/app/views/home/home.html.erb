<h1>Welcome to Bookz.com</h1>

<ul class='list-unstyled'>
  <li><a href="/authors/new">Create an Author</a></li>
  <li><a href="/books/new">Create a Book</a></li>
</ul>
<hr>

<h2>Authors</h2>
<% @authors.each do |a| %>
  <ul>
    <li><%= a.name %> | Books: <%= a.books.pluck(:title).to_sentence %></li>-
  </ul>
<% end %>
<hr>

<h2>Books</h2>
<% @books.each do |b| %>
  <ul>
    <li><%= b.title %> | <%= b.author.name %> | <%= b.year_published %> | <%= b.genre %> </li>
  </ul>
<% end %>